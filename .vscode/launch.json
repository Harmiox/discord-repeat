	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Echo",
			"program": "${workspaceFolder}/src/index.ts",
			"preLaunchTask": "tsc: build - tsconfig.json",
			"envFile": "${workspaceRoot}/.env",
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"outputCapture": "std",
			"smartStep": true
		}
	]
}